<h1>Burgers!</h1>

<h2>Burgers to Devour!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devour}}
    <li>
      {{this.burger_name}}
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devour}}
    <li>
      Burger Name: {{this.burger_name}}
      <button class="devourbtn" value="{{this.id}}">Devour</button>
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>
