<h1>Eat-Da-Burger</h1>

<h2>Burgers to Devour!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devour}}
    <li>
      {{this.burger_name}}
      <button class="devourbtn" data-id="{{this.id}}">DEVOUR!!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Nom Nom - All Gone!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devour}}
    <li>
      {{this.burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">What's Your Burger?</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>
